{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@sctavern/data": ["packages/data/src/index.ts"],
      "@sctavern/emulator": ["packages/emulator/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
